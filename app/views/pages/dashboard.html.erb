<div class="container">
  <div class="big-card d-flex justify-content-between">
    <div class='p-5'>
      <h1>Mes réservations</h1>
      <% if @bookings.length == 0 %>
        <p>'Vous n'avez pas de réservation en cours !'</p>
      <% else %>
        <ul>
          <% @bookings.each do |booking| %>
            <li><strong><%= link_to booking.artwork.title, artwork_path(booking.artwork) %></strong> - du <%= booking.start_date %> au <%= booking.end_date %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class='p-5'>
      <h1>Mes oeuvres</h1>
      <% if @user.artworks.length == 0 %>
        <p>'Vous n'avez pas d'oeuvres à louer pour le moment !'</p>
      <% else %>
        <ul>
          <% @user.artworks.each do |artwork| %>
            <li><strong><%= link_to artwork.title, artwork_path(artwork) %></strong></li>

          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
