<div class="container ">
  <div class="big-card d-flex justify-content-between align-items-center">
    <div class="">
      <%= cl_image_tag @artwork.photo.key %>
    </div>
    <div class="p-5" style="position: relative;">
      <%=link_to artworks_path, class: "grey-arrow d-flex align-items-center" do%>
        <i class="fa-solid fa-arrow-left"></i>
        <p class="mb-0 ms-2">Retour aux oeuvres</p>
      <%end%>
      <h1><strong><%= @artwork.title %></strong></h1>
      <h2><strong><%= @artwork.username %></strong></h2>
      <p><strong><%=@artwork.price_per_day%>€</strong> / jour</p>
      <p><%= @artwork.description %></p>

      <div data-controller="reveal">
        <div class="d-flex mt-3 justify-content-center">
          <%= button_tag "Consulter les disponibilités", class: "btn-ghost-show", data: { action: 'click->reveal#show' } %>
        </div>

        <div data-reveal-target="form" class="d-none">
          <%= simple_form_for [ @artwork, Booking.new ] do |f| %>
            <%= f.input :start_date %>
            <%= f.input :end_date %>
          <div class= "d-flex mt-3 justify-content-center" >
            <%= f.submit "Réserver cette oeuvre", class: "btn-yellow-rounded"%>
          <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>


