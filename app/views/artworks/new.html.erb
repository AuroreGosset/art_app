<div class="container">
  <div class="big-card p-5">
    <%= simple_form_for @artwork  do |f| %>
      <%#= f.input :username %>
      <%= f.input :title, label: "Titre de l'oeuvre" %>
      <%= f.input :price_per_day, label: "Prix par jour" %>
      <%= f.input :description, label: "Description" %>
      <%= f.input :category, label: "Catégorie", as: :select, collection: ['Peinture', 'Abstrait', 'Street Art', 'Photos'] %>
      <%= f.input :photo, label: "Photo" %>
      <%= f.submit "Créer une nouvelle oeuvre", class: "btn-formulaire mt-2" %>
    <% end %>
  </div>
</div>
